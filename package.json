{
  "name": "estate-management-nextjs",
  "version": "1.0.0",
  "description": "تطبيق Next.js لإدارة الاستثمارات العقارية مع نظام شامل للمراقبة والنسخ الاحتياطية",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:local": "DB_MODE=local next dev",
    "dev:cloud": "DB_MODE=cloud next dev",
    "build": "node scripts/build-production.js",
    "build:local": "DB_MODE=local npx prisma db push --accept-data-loss && next build",
    "build:cloud": "DB_MODE=cloud npx prisma db push --accept-data-loss && next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push --accept-data-loss",
    "db:push:local": "DB_MODE=local prisma db push --accept-data-loss",
    "db:push:cloud": "DB_MODE=cloud prisma db push --accept-data-loss",
    "db:studio": "prisma studio",
    "db:studio:local": "DB_MODE=local prisma studio",
    "db:studio:cloud": "DB_MODE=cloud prisma studio",
    "db:reset": "prisma db push --force-reset",
    "db:reset:local": "DB_MODE=local prisma db push --force-reset",
    "db:reset:cloud": "DB_MODE=cloud prisma db push --force-reset",
    "db:setup:local": "node scripts/setup-local-postgres.sh",
    "db:setup:windows": "scripts\\setup-local-postgres.bat",
    "env:setup": "node scripts/setup-environment.js",
    "env:local": "node scripts/setup-environment.js local",
    "env:production": "node scripts/setup-environment.js production",
    "env:netlify": "node scripts/setup-environment.js netlify",
    "backup:create": "node scripts/create-backup.js",
    "backup:restore": "node scripts/restore-backup.js",
    "backup:create:local": "DB_MODE=local node scripts/create-backup.js",
    "backup:create:cloud": "DB_MODE=cloud node scripts/create-backup.js",
    "backup:export": "ts-node --project tsconfig.backup.json scripts/backup/export.ts",
    "backup:import:dry": "ts-node --project tsconfig.backup.json scripts/backup/import.ts ./backup-latest.tar.gz",
    "backup:import:apply": "ts-node --project tsconfig.backup.json scripts/backup/import.ts ./backup-latest.tar.gz --apply",
    "backup:wipe": "ts-node --project tsconfig.backup.json scripts/backup/wipe.ts soft",
    "test:connections": "node scripts/test-connections.js",
    "test:connections:quick": "node scripts/test-connections.js quick",
    "postinstall": "prisma generate && node scripts/setup-db.js",
    "deploy:netlify": "npm run build:cloud && netlify deploy --prod",
    "deploy:vercel": "npm run build:cloud && vercel --prod",
    "deploy:render": "npm run build:cloud",
    "deploy:railway": "npm run build:cloud",
    "deploy:digitalocean": "npm run build:cloud"
  },
  "dependencies": {
    "@prisma/client": "^6.16.0",
    "@react-pdf/renderer": "^4.3.0",
    "@sparticuz/chromium": "^138.0.2",
    "@tanstack/react-table": "^8.21.3",
    "@types/bcryptjs": "^2.4.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/numeral": "^2.0.5",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/tar": "^6.1.13",
    "autoprefixer": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.5.0",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.18",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "exceljs": "^4.4.0",
    "jsonwebtoken": "^9.0.0",
    "jszip": "^3.10.1",
    "next": "^14.0.0",
    "numeral": "^2.0.6",
    "papaparse": "^5.5.3",
    "pg": "^8.11.0",
    "postcss": "^8.0.0",
    "puppeteer-core": "^24.19.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.0.0",
    "tar": "^7.0.0",
    "typescript": "^5.0.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "prisma": "^6.16.0",
    "ts-node": "^10.9.0"
  }
}
