# إعدادات التطبيق
NODE_ENV=production
DB_MODE=cloud
PRISMA_SCHEMA_PATH=prisma/schema.postgres.prisma

# JWT
JWT_SECRET=netlify-production-jwt-secret-key-change-this
JWT_EXPIRES_IN=24h

# API URLs
API_BASE_URL=https://your-netlify-app.netlify.app/api
NEXT_PUBLIC_API_URL=https://your-netlify-app.netlify.app/api

# إعدادات قاعدة البيانات
DB_POOL_MIN=5
DB_POOL_MAX=15
DB_POOL_IDLE_TIMEOUT_MS=30000

# النسخ الاحتياطية
BACKUP_DIR=/tmp/backups
MAX_BACKUPS=10
BACKUP_RETENTION_DAYS=30

# السجلات
LOG_LEVEL=info
ENABLE_QUERY_LOGGING=false

# الميزات
ENABLE_AUDIT_LOGS=true
ENABLE_NOTIFICATIONS=true
ENABLE_BACKUP_AUTOMATION=false

# الأمان
CORS_ORIGIN=https://your-netlify-app.netlify.app
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100