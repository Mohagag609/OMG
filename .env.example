# Database Configuration
DATABASE_TYPE=postgresql-cloud
# Options: postgresql-cloud, postgresql-local, sqlite

# Database URLs
DATABASE_URL_POSTGRES_CLOUD=postgresql://username:password@host:port/database
DATABASE_URL_POSTGRES_LOCAL=postgresql://username:password@localhost:5432/database
DATABASE_URL_SQLITE=file:./dev.db

# Fallback (used if specific URL not set)
DATABASE_URL=postgresql://username:password@host:port/database

# Application Configuration
APP_VERSION=1.0.0
PRISMA_MIGRATION_ID=latest

# Security
ALLOW_HARD_WIPE=false

# Existing variables...
NEXTAUTH_SECRET=your-secret-key
NEXTAUTH_URL=http://localhost:3000