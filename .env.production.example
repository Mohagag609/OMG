# إعدادات البيئة للإنتاج
# انسخ هذا الملف إلى .env.production وحدّث القيم

# قاعدة البيانات
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# JWT Secret (يجب أن يكون قوياً ومختلفاً لكل بيئة)
JWT_SECRET="your-super-secure-production-jwt-secret-key-here"

# البيئة
NODE_ENV="production"

# المنفذ
PORT="3000"

# الأمان
BCRYPT_ROUNDS="12"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# النسخ الاحتياطية
BACKUP_LOCAL_INTERVAL="6h"
BACKUP_EXTERNAL_INTERVAL="24h"
BACKUP_RETENTION_DAYS="14"
BACKUP_RETENTION_WEEKS="8"
BACKUP_RETENTION_MONTHS="6"

# المراقبة
HEALTH_CHECK_INTERVAL="5m"
METRICS_RETENTION_DAYS="30"
ALERT_THRESHOLD_RESPONSE_TIME="5000"
ALERT_THRESHOLD_ERROR_RATE="0.05"

# الإشعارات
NOTIFICATION_RETENTION_DAYS="30"
NOTIFICATION_GROUPING_WINDOW="5m"
NOTIFICATION_ESCALATION_TIME="1h"

# التدقيق
AUDIT_RETENTION_DAYS="365"
AUDIT_BATCH_SIZE="100"
AUDIT_FLUSH_INTERVAL="10s"

# الحذف الناعم
SOFT_DELETE_RETENTION_DAYS="30"
HARD_DELETE_REQUIRES_APPROVAL="true"

# الاستيراد والتصدير
IMPORT_MAX_FILE_SIZE="10MB"
EXPORT_MAX_RECORDS="10000"
EXPORT_BATCH_SIZE="1000"

# واجهة المستخدم
DEFAULT_PAGE_SIZE="20"
MAX_PAGE_SIZE="100"
DEFAULT_THEME="light"
DEFAULT_LANGUAGE="ar"

# الأداء
CACHE_TTL="300"
RATE_LIMIT_WINDOW="15m"
RATE_LIMIT_MAX_REQUESTS="100"

# المنطقة الزمنية
TZ="Africa/Cairo"

# إعدادات إضافية للإنتاج
LOG_LEVEL="info"
ENABLE_METRICS="true"
ENABLE_HEALTH_CHECKS="true"
ENABLE_AUDIT_LOGS="true"
ENABLE_BACKUPS="true"
ENABLE_NOTIFICATIONS="true"

# إعدادات الأمان الإضافية
CORS_ORIGIN="https://your-domain.com"
SECURE_COOKIES="true"
TRUST_PROXY="true"

# إعدادات قاعدة البيانات الإضافية
DB_POOL_SIZE="10"
DB_TIMEOUT="30000"
DB_IDLE_TIMEOUT="30000"

# إعدادات Redis (اختياري)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# إعدادات البريد الإلكتروني (اختياري)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@your-domain.com"

# إعدادات الملفات
UPLOAD_MAX_SIZE="10MB"
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# إعدادات التشفير
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# إعدادات المراقبة الخارجية
SENTRY_DSN=""
NEW_RELIC_LICENSE_KEY=""
DATADOG_API_KEY=""

# إعدادات الشبكة
REQUEST_TIMEOUT="30000"
KEEP_ALIVE_TIMEOUT="5000"
HEADERS_TIMEOUT="40000"

# إعدادات الذاكرة
MAX_MEMORY_USAGE="512MB"
GC_THRESHOLD="100MB"

# إعدادات التخزين المؤقت
CACHE_TYPE="memory"
CACHE_TTL_SECONDS="300"
CACHE_MAX_SIZE="1000"

# إعدادات الجلسات
SESSION_SECRET="your-session-secret-key-here"
SESSION_MAX_AGE="86400000"

# إعدادات الأمان المتقدمة
HELMET_ENABLED="true"
CSP_ENABLED="true"
HSTS_ENABLED="true"
XSS_PROTECTION="true"
NO_SNIFF="true"
FRAME_OPTIONS="DENY"